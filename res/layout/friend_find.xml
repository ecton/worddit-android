<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/friend_find"
	android:orientation="vertical"
	android:padding="5dp">
	<FrameLayout
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:id="@+id/friend_find_form">
		<LinearLayout
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:id="@+id/friend_find_form"
			android:layout_width="fill_parent">
			<EditText
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:hint="@string/hint_email"
				android:id="@+id/friend_find_input_email"
				android:lines="1"
				android:ellipsize="end"
				android:layout_width="220dp" 
				android:inputType="textEmailAddress"></EditText>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:id="@+id/friend_find_container_buttons"
				android:paddingTop="15sp">
				<Button
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:id="@+id/friend_find_button_search"
					android:text="@string/label_search"
					android:layout_width="110dp"></Button>
			</LinearLayout>
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
