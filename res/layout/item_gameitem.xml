<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:padding="5dp">
	<TextView
		android:layout_height="wrap_content"
		android:textSize="20sp"
		android:layout_width="fill_parent"
		android:text="@string/label_nextup"
		android:id="@+id/item_game_nextup"></TextView>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:text="@string/label_lastplay"
		android:id="@+id/item_game_lastplay"></TextView>
</LinearLayout>
